@page
@model IndexModel
@{

    ViewData["ActivePage"] = ManageNavPages.Index;
    // Layout = "/Views/Shared/_LayoutNew.cshtml";
}

<!-- Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.0-beta3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+8/6gfAxF5s7kn7/0Uj5y5ls6KMp3P0e5th6N2" crossorigin="anonymous">

<style>
    .form-container {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        text-align: center;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .form-label {
        margin-bottom: 0.5rem;
    }

    .btn-custom-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-custom-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>

<h3 class="mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="form-container">
            <h4 class="form-title">Cập nhật hồ sơ</h4>
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

                <div class="mb-3">
                    <label for="Username" class="form-label">Tên tài khoản</label>
                    <input asp-for="Username" class="form-control" id="Username" placeholder="Tên tài khoản" disabled />
                </div>

                <div class="mb-3">
                    <label for="Input_PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" id="Input_PhoneNumber" placeholder="Số điện thoại" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Input_FullName" class="form-label">Họ và tên</label>
                    <input asp-for="Input.FullName" class="form-control" id="Input_FullName" placeholder="Họ và tên" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div>
                    <p> </p>
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-custom-primary">Lưu thông tin</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk/M20Xb1oK3Q3yxZh7/v/8dTOOeRtAxV5K5t3Sf" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.0-beta3/js/bootstrap.min.js" integrity="sha384-j0KjG6dfN3Xj8xwZqqg5BaxTt/M7mEJ6XHSM4tOdP9efmZmczypSwlhcxnZc2+KJ" crossorigin="anonymous"></script>