@model DoAnCoSoTL.Models.Movie

@{
    Layout = "_AdminLayout";
}
<style>
    .container {
        max-width: 900px;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
    }

    .card-title {
        margin-bottom: 0;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .movie-image {
        display: block;
        margin-left: auto;
        margin-right: auto;
        max-width: 100%;
        height: auto;
    }

    .cast-member {
        text-align: center;
        margin-bottom: 10px;
    }

        .cast-member img {
            max-width: 100px;
            height: auto;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header text-center">
                    <h2 class="card-title">@Model.Name</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Model.Image" alt="Movie Image" class="img-fluid img-thumbnail movie-image" />
                        }
                        else
                        {
                            <img src="placeholder.jpg" alt="Placeholder Image" class="img-fluid img-thumbnail movie-image" />
                        }
                    </div>
                    <table class="table table-striped">
                        <tr>
                            <th>Start Date</th>
                            <td>@Model.StartDate.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th>End Date</th>
                            <td>@Model.EndDate.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th>Thể loại</th>
                            <td>@Model.Category.Name</td>
                        </tr>
                        <tr>
                            <th>Giá</th>
                            <td>@Model.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                        </tr>
                        <tr>
                            <th>Độ tuổi</th>
                            <td>@Model.Age</td>
                        </tr>
                        <tr>
                            <th>Diễn viên</th>
                            <td colspan="2">
                                <div class="row justify-content-center">
                                    @foreach (var actor in ViewBag.Actor)
                                    {
                                        <div class="col-md-4">
                                            <div class="cast-member">
                                                <img src="@actor.Actor.Image" alt="@actor.Actor.Name">
                                                <p><strong>@actor.Actor.Name</strong></p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th>Duration</th>
                            <td>@Model.DurationMinutes minutes</td>
                        </tr>
                        <tr>
                            <th>Producer</th>
                            <td>@Model.Producer.Name</td>
                        </tr>
                        <tr>
                            <th>Total Quantity Sold</th>
                            <td>@Model.TotalQuantitySold</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>Trailer</th>
                            <td>
                                <a href="@Model.Trailer" target="_blank" class="btn btn-outline-primary">Watch Trailer</a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>