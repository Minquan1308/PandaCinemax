@model List<DoAnCoSoTL.Models.Cinema>

@{
    Layout = "_AdminLayout";
}

<div class="search-box pull-left mb-5">
    <form asp-action="Index" asp-controller="Cinema" method="get">
        <input type="search" value=@ViewData["searching"] name="Keyword" placeholder="Search for Cinemas...">
        <i class="ti-search"></i>
        <input type="submit" style="display: none" />
    </form>
</div>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container mt-5">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Location</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <th scope="row">@i.Id</th>
                    <td>@i.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(i.Image))
                        {
                            <img src="@i.Image" alt="Product Image" style="width: 200px; height: 200px;" />
                        }
                    </td>
                    <td>@i.Location</td>
                    <td>@i.Description</td>
                    <td>
                        <a asp-action="Update" asp-controller="Cinema" asp-route-id="@i.Id"> <i class="fa fa-edit"></i></a>
                        @*  <a asp-action="Delete" asp-route-id="@i.Id"> <i class="ti-trash"></i></a> *@
                        <a href="~/Admin/Cinema/Delete" class="btn-delete" data-id="@i.Id"><i class="ti-trash"></i></a>
                        <a asp-action="Details" asp-route-id="@i.Id"><i class="fa fa-arrow-circle-right"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.Count == 0)
    {
        <img src="/images/error/notfound.png" style="height:50vh; text-align:center; margin-left:30%;" />
        <a asp-action="Create" class="btn btn-warning font-weight-bold" style=" color: white; width:70px; height:70px; border-radius:50%; text-align:center; padding: 2.5% 0;"> Add <i class="fa fa-plus-circle"></i></a>
    }
    @if (Model.Count != 0)
    {
        <a asp-action="Create" class="btn btn-primary"> Add <i class="fa fa-plus-circle"></i></a>

    }
</div>
<form id="delete-form" action="@Url.Action("Delete", "Cinema")" method="post" style="display: none;">
    <input type="hidden" name="id" value="" />
</form>

@section Scripts {
    <script>
        // Hàm xử lý sự kiện cho nút thùng rác
        $(document).ready(function () {
            $('.btn-delete').click(function (e) {
                e.preventDefault();
                var deleteId = $(this).data('id');
                if (confirm("Are you sure you want to delete this cinema?")) {
                    // Gửi yêu cầu xóa đến action "Delete" của controller "Category"
                    $.post('/Admin/Cinema/Delete/' + deleteId)
                        .done(function (response) {
                            if (response.success) {
                                console.log("Successfully deleted the cinema");
                                window.location.reload();
                            } else {
                                alert(response.message);
                            }
                        })
                        .fail(function (error) {
                            console.error("This cinema has been set and cannot be deleted", error);
                            alert("This cinema has been set and cannot be deleted.");
                        });
                }
            });
        });

    </script>
}
